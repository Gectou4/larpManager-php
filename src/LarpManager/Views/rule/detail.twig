{% extends "layout.twig" %}

{% block title %}{{ regle.label }}{% endblock title %}

{% block content %}

<ol class="breadcrumb">
	<li><a href="{{ path('homepage')  }}">Accueil</a></li>
	<li><a href="{{ path('rules') }}">Liste des règles</a></li>
	<li class="active">{{ rule.label }}</li>
</ol>


<div class="well well-sm">
	<div class="header">
		<h5>{{ rule.label }}</h5>
	</div>
	
	<blockquote>{{ rule.description|markdown }}</blockquote>

	<div class="list-group-item">
		Si le PDF n'apparait pas correctement dans votre navigateur, <a href="{{ path('rule.document',{'rule': rule.id}) }}">cliquez ici</a> pour télécharger le fichier.
	</div>
	<object type="application/pdf" width="100%" height="1200px" data="{{ path('rule.document',{'rule': rule.id}) }}">
	</object>

</div>
{% endblock content %}