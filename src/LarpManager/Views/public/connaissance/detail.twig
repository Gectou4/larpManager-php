{% extends "layout.twig" %}

{% block title %}Connaissance {{ connaissance.label }}{% endblock title %}

{% block content %}

<ol class="breadcrumb">
	<li><a href="{{ path('homepage')  }}">Accueil</a></li>
	<li><a href="{{ path('gn.detail', {'gn' : participant.gn.id}) }}">{{ participant.gn.label }}</a></li>
	<li><a href="{{ path('gn.personnage', {'gn': participant.gn.id}) }}">{{ participant.personnage.nom }}</a></li>
	<li class="active">{{ connaissance.label }}</li>
</ol>


<div class="well well-sm">
	<div class="header">
		<h5>{{ connaissance.label }}</h5>
	</div>
		
	{{ connaissance.description|markdown }}
	
	<object type="application/pdf" width="100%" height="1200px" >
		<param name="src" value="{{ path('participant.connaissance.document',{'participant': participant.id, 'connaissance' :connaissance.id, 'filename': filename}) }}" />
		<p>Si le PDF n'apparait pas correctement dans votre navigateur, <a href="{{ path('participant.connaissance.document',{'participant': participant.id, 'connaissance': connaissance.id, 'filename': filename}) }}">cliquez ici</a> pour télécharger le fichier.</p>
	</object>

</div>
{% endblock content %}