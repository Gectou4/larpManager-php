{% extends "layout.twig" %}

{% block title %}Groupe secondaire{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Page d'accueil</a></li>
			<li><a href="{{ path('gn.detail', {'gn' : participant.gn.id}) }}">{{ participant.gn.label }}</a></li>
			{% if participant.personnage %}<li><a href="{{ path('gn.personnage', {'gn': participant.gn.id}) }}">{{ participant.personnage.nom }}</a></li>{% endif %}
		<li class="active">Groupes secondaires</li>
	</ol>
	
	<div class="row">
		<div class="col-xs-12 col-md-8">
			<div class="well well-sm">
				<h4>
					Liste des groupes secondaires
					<small>
						( {{ groupeSecondaires|length }} groupes )
					</small>
				</h4>
			</div>
			
			<ul class="list-group">
				{% for groupe in groupeSecondaires %}
					<li class="list-group-item">
						<h4 class="list-group-item-heading">
							{{ groupe.label }}
							{% if participant.personnage %}
								<div class="btn-group pull-right" role="group" aria-label="...">
									<a href="{{ path('participant.groupeSecondaire.postuler', {'participant': participant.id, 'groupeSecondaire': groupe.id}) }}" class="btn btn-primary" role="button">Postuler</a>
								</div>
							{% endif %}
						</h4>
						<p class="list-group-item-text">
							{{ groupe.description|markdown }}
						</p>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
	
{% endblock %}